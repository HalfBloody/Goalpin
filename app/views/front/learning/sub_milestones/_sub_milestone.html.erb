
<% if milestone.id %>
  <div class="sub_milestone box" id=
    <%="sub_milestone_#{milestone.id}"%>
  >
    <div class="row">
      <div class="column large-2">
      </div>
      <div class="column large-8">
        <%= "Name: #{milestone.name}" %>
      </div>
      <div class="column large-2">
        <%= link_to 'delete', front_learning_sub_milestone_path(id: milestone.id), remote: true, method: :delete %>
      </div>      
    </div>
    <div class="row">
      <div class="column large-10">
        <%= milestone.completed_at ? "Milestone completed at #{milestone.completed_at}" : "Milestone not completed" %>
      </div>
      <div class="column large-2">
        
      </div>
    </div>
  </div>

  <div class="sub_milestones">
    <% milestone.sub_milestones.each do |sub_milestone| %>

    <% end %>
  </div>
<% end %>