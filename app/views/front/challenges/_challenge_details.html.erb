
<% if challenge.behind_schedule? %>
  <div class="row header">
    <div class="small-12 column">
      <h1>
        <%= "Hurry up!" %>
      </h1>
    </div>
  </div>
  <div class="row header">
    <div class="small-12 column">
      <h2>
        <%= "You're behind with your #{challenge.typus} challenge" %>
      </h2>
    </div>
  </div>  
  <div class="row">
    <div class="small-12 column">
      <%= "#{challenge.time_progress.round.to_s}% of your time has passed but you only finished #{challenge.milestone_progress.to_i}% of your milestones." %>
    </div>
  </div>
<% elsif challenge.finished? %>

<div class="row header">
    <div class="small-12 column">
      <h1>
        <%= "Congratulations!" %>
      </h1>
    </div>
  </div>
  <div class="row header">
    <div class="small-12 column">
      <h2>
        <%= "You finished your #{challenge.typus} challenge. I'm proud of you." %>
      </h2>
    </div>
  </div>  
  <div class="row">
    <div class="small-12 column">
      <%= "You finished your challenge #{time_diff_string(challenge.finished_at, challenge.end_date)} in advance." %>
    </div>
  </div>


<% else %>
  <div class="row header">
    <div class="small-12 column">
      <h1>
        <%= "Keep up the good work!" %>
      </h1>
    </div>
  </div>
  <div class="row header">
    <div class="small-12 column">
      <h2>
        <%= "Your #{challenge.typus} challenge is on schedule." %>
      </h2>
    </div>
  </div>  
  <div class="row">
    <div class="small-12 column">
      <%= "#{challenge.time_progress.round.to_s}% of your time has passed and you already finished #{challenge.milestone_progress.to_i}% of your milestones." %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="small-6 column">
    You started your challenge on: 
    <%= challenge.start_date.strftime("%e. %B %Y") %>
  </div>
</div>
<div class="row">
  <div class="small-6 column">
    Your challenge ends on: 
    <%= challenge.end_date.strftime("%e. %B %Y") %>
  </div>
</div>

<div class="row">
  <div class="small-6 column">
    You completed: 
    <%= "#{@challenge.finished_milestones} out of #{@challenge.number_of_milestones} milestones" %>
  </div>
  <div class="small-6 column">
    <%= link_to "All milestones", "#", id: "show_milestones" %>
    
  </div>  
</div>