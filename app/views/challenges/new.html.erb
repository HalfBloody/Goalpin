
<2>How long should the challenge go?</h2>
  <%= link_to "30 days", '#', { id: '30_days' } %>
  <%= link_to "20 days", '#', { id: '20_days' } %>

<%= simple_form_for @challenge do |f| %>
  <%= f.input :start_date, as: :hidden %>
  <%= f.input :end_date, as: :hidden,  input_html: { value: 40 } %>
  <%= f.input :typus, as: :hidden,  input_html: { value: @typus } %>
  <%= f.input :number_of_milestones, as: :hidden, input_html: { value: 11 } %>
  <%= f.button :submit %>

<% end %>

<%= debug @challenge.start_date.to_i %>
<%= debug 30.days %>
