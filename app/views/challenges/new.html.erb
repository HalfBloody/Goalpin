<div class="background_color">
  <div class="second_layer">
    <h2>How long should the challenge go?</h2>

       <div class="button_box">
        <% @days.each do |day| %>
          <%= content_tag :span,
          day, 
          class: ["button", "days", "inactive"],
          id: "#{day}_days",
          "data-days" => "#{day}"
          %>
        <% end %>
      </div>



      <div class="button_box">
        <% @milestones.each do |milestone| %>
          <%= content_tag :span,
          milestone, 
          class: ["button", "times", "inactive"],
          id: "#{milestone}_times",
          "data-times" => "#{milestone}"
          %>
        <% end %>
      </div>

    <%= simple_form_for @challenge do |f| %>
      <%= f.input :start_date, as: :hidden %>
      <%= f.input :end_date, as: :hidden,  input_html: { value: Time.now + 30.days } %>
      <%= f.input :typus, as: :hidden,  input_html: { value: @typus } %>
      <%= f.input :number_of_milestones, as: :hidden, input_html: { value: @milestones.first } %>
      <%= f.button :submit %>

    <% end %>
  </div>
</div>
